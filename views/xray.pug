extends menu

block content
    div(class="container")
        div(class="container")
            div(class="col-sm-3")
                div(class="panel panel-default")
                    div(class="panel-heading")
                        h3(class="panel-title") GÃªneros
                    div(class="panel-body")
                        canvas(id="gender", class="chart chart-doughnut", chart-data="gender.data", chart-labels="gender.labels")
            div(class="col-sm-9")
                dl(class="dl-horizontal")
                    dt {{gender.labels[0]}}
                    dd {{gender.data[0]}}
                    dt {{gender.labels[1]}}
                    dd {{gender.data[1]}}
        hr
        div(class="container")
            div(class="col-sm-5")
                div(class="panel panel-default")
                    div(class="panel-heading")
                        h3(class="panel-title") Partidos
                    div(class="panel-body")
                        canvas(id="parties", class="chart chart-polar-area", chart-data="party.data", chart-labels="party.labels")
            div(class="col-sm-7")
                dl(class="dl-horizontal")
                    dt(ng-repeat-start="(lb,dt) in parties") {{lb}}
                    dd(ng-repeat-end) {{dt}}
